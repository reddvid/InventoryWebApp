                        <i class="material-icons icon">
                            person
                        </i>
                        <span class="text">
                            @if (User.IsInRole("admin"))
                            {
                                <strong>Hello, @User.Identity.Name - Admin Manager</strong>
                            }
                            @if (User.IsInRole("salesmgr"))
